<h5>{{title}}</h5>
<p>
  This example demonstrates the ability to render d4 charts in a very small space.
</p>
<hr/>
<script type="text/javascript" charset="utf-8" id='source_code'>
'use strict';

$(document).ready(function() {
  var t = 0;
  var v = 70;
  var next = function() {
    v = ~~Math.max(10, Math.min(90, v + 10 * (Math.random() - 0.5)));
    return {
      x: ++t,
      y: (v %2 === 0) ? -v : v
    };
  };
  $('.charts').each(function(i, e) {
    var data = d3.range(10).map(next);


    var chart = d4.charts.column();
    chart
      .margin({
        top: 0,
        left: 0,
        bottom: 30,
        right: 0
      })
      .outerHeight(100)
      .outerWidth($(e).width())
      .mixout('barLabels')
      .mixout('yAxis')
      .y(function(axis) {
        axis
          .rangeRound([0, chart.height()]);
      })
      .mixin({ 'zeroLine' : d4.features.referenceLine })
      .using('zeroLine', function(zeroLine){
        zeroLine
        .x1(0)
        .y1(function(){
          return this.y(0);
        })
        .x2(chart.outerWidth())
        .y2(function(){
          return this.y(0);
        });
      });

    d3.select(e)
      .datum(data)
      .call(chart);
  });
});


</script>
